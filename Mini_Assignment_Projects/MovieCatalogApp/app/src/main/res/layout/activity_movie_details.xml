<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#000"
    android:padding="16dp"
    tools:context=".MovieDetailsActivity">

    <ImageView
        android:id="@+id/details_iv_movie_poster"
        android:layout_width="120dp"
        android:layout_height="160dp"
        android:src="@drawable/img_movie_one"/>

    <TextView
        android:id="@+id/details_tv_movie_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:textSize="20sp"
        android:textAlignment="center"
        android:textColor="#FF5722"
        android:textStyle="bold"/>


    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/ic_calender"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/ic_time"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:src="@drawable/ic_star"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/details_tv_movie_release_year"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/details_tv_movie_duration"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/details_tv_movie_rating"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:id="@+id/details_tv_movie_synopsis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:textSize="20sp"
        android:textColor="#FFFFFF"
        android:textStyle="italic"/>






</LinearLayout>